@model Application.SMS.REPORTS.ViewModel.RevenueReportVM
@{
    ViewData["Title"] = "Redi Revenue Report";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Revenue Report</h1>

<!-- Basic Card Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Filter</h6>
    </div>
    <div class="card-body">
        <form asp-controller="Reports" asp-action="RevenueReports" method="post">
            <div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label asp-for="StartDate" id="Date">Start Date : </label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control datepicker" asp-for="StartDate" type="date" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label asp-for="EndDate" id="Date">End Date : </label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control datepicker" asp-for="EndDate" type="date" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label asp-for="OperatorId" id="Date">Operator : </label>
                        </div>
                        <div class="col-md-6">
                            <select class="form-control" asp-for="OperatorId" asp-items="Model.ListVMOperator" name="Operatorid"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label asp-for="ServiceId" id="Date">Service : </label>
                        </div>
                        <div class="col-md-6">
                            <select class="form-control" asp-for="ServiceId" asp-items="Model.ListVMService" name="ServiceId"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label asp-for="Sdc" id="Date">Sdc : </label>
                        </div>
                        <div class="col-md-6">
                            <select class="form-control" asp-for="Sdc" asp-items="Model.ListSdc" name="Sdc"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label asp-for="Type" id="Date">Trx Type : </label>
                        </div>
                        <div class="col-md-6">
                            <select class="form-control" asp-for="Type" asp-items="Model.ListType" name="Type"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <input class="btn btn-success" type="submit" value="Search" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- DataTables COntents -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Revenue Report</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Service</th>
                            <th>Operator</th>
                            <th>Sid</th>
                            <th>MT Type</th>
                            <th>Price</th>
                            <th>MT Sent</th>
                            <th>MT Hits</th>
                            <th>Revenue</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Date</th>
                            <th>Service</th>
                            <th>Operator</th>
                            <th>Sid</th>
                            <th>MT Type</th>
                            <th>Price</th>
                            <th>MT Sent</th>
                            <th>MT Hits</th>
                            <th>Revenue</th>
                        </tr>
                    </tfoot>
                    @foreach(var revReport in Model.Revenuereports)
                    {
                        <tr>
                            <td>@revReport.Date</td>
                            <td>@revReport.Service.Name</td>
                            <td>@revReport.Operator.OperatorName</td>
                            <td>@revReport.Sid</td>
                            <td>@revReport.Mt_Type</td>
                            <td>@revReport.Price</td>
                            <td>@revReport.Mt_Sent</td>
                            <td>@revReport.Mt_Hits</td>
                            <td>@revReport.Revenue</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>